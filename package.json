{
  "name": "openapi-apispec",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "mock": "npm run generate; npm run prism-mock",
    
    "generate": "npm run bundle; npm run lint; npm run diff-script;",
    "diff-script": "node ./specs/spec-diff.js",

    "prism-mock": "npm run lint; npm run bundle; prism mock ./bin/api.yaml -d",
    "lint": "spectral lint ./bin/api.yaml --ignore-unknown-format",
    "bundle": "swagger-cli bundle specs/api.yaml -o ./bin/api.yaml -t yaml"
  },
  "dependencies": {},
  "devDependencies": {
    "@stoplight/prism-cli": "^4.1.2",
    "openapi-diff": "^0.23.4"
  },
