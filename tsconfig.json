{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016"
    ],
    "outDir": "js",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "noLib": false,
		"esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}
